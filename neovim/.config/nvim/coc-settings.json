{
  "coc.source.emoji.filetypes": [
    "markdown",
    "gitcommit"
  ],

  "diagnostic.virtualText": false,
  "diagnostic.virtualTextLines": 1,

  "python.formatting.provider": "black",
  "python.linting.pylintArgs": [
    "--disable",
    "missing-function-docstring,missing-module-docstring,missing-class-docstring,too-few-public-methods"
  ],
  "python.sortImports.args": [
    "--balanced",
    "--combine-as",
    "--multi-line", "3",
    "--trailing-comma",
    "--use-parentheses"
  ],

  "suggest.minTriggerInputLength": 2,
  "suggest.noselect": false,

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }
      }
    }
  }
}
