{
  "coc.source.emoji.filetypes": [
    "markdown",
    "gitcommit"
  ],

  "diagnostic.virtualText": false,
  "diagnostic.virtualTextLines": 1,

  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": [
    "--disable",
    "missing-function-docstring,missing-module-docstring,missing-class-docstring,too-few-public-methods,unsubscriptable-object"
  ],
  "python.sortImports.args": [
    "--balanced",
    "--combine-as",
    "--multi-line", "3",
    "--trailing-comma",
    "--use-parentheses"
  ],

  "suggest.minTriggerInputLength": 2,
  "suggest.noselect": false,

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }
      }
    }
  },

  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": [
      "*.kube.yaml",
      "*.yaml.j2",
      "*.yaml"
    ],
    "https://json.schemastore.org/ansible-playbook": [
      "**/playbooks/*.yml",
      "**/playbooks/*.yaml",
      "**/playbook.yaml",
      "**/playbook.yml"
    ],
    "https://json.schemastore.org/ansible-role-2.9": [
      "roles/**/*.yaml"
    ],
    "https://json.schemastore.org/kustomization": [
      "*/kustomization.yaml"
    ]
  }
}
