! xscreensaver settings --------------------------------------------------------
! font settings
xscreensaver.Dialog.headingFont : xft:Ubuntu:*
xscreensaver.Dialog.bodyFont    : xft:Ubuntu:*
xscreensaver.Dialog.labelFont   : xft:Ubuntu:*
xscreensaver.Dialog.unameFont   : xft:Ubuntu:*
xscreensaver.Dialog.buttonFont  : xft:Ubuntu:*
xscreensaver.Dialog.dateFont    : xft:Ubuntu:*
xscreensaver.passwd.passwdFont  : xft:Ubuntu:*

! general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground        : #BBBBBB
xscreensaver.Dialog.background        : #202020
xscreensaver.Dialog.topShadowColor    : #111111
xscreensaver.Dialog.bottomShadowColor : #111111
xscreensaver.Dialog.Button.foreground : #FFFFFF
xscreensaver.Dialog.Button.background : #575757

! username/password input box and date text colour
xscreensaver.Dialog.text.foreground     : #AAAAAA
xscreensaver.Dialog.text.background     : #161616
xscreensaver.Dialog.internalBorderWidth : 24
xscreensaver.Dialog.borderWidth         : 0
xscreensaver.Dialog.shadowThickness     : 2

! timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground : #ff0000
xscreensaver.passwd.thermometer.background : #000000
xscreensaver.passwd.thermometer.width      : 8

